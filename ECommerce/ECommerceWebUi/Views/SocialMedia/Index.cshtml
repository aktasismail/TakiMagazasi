@model List<SocialMediaDto>
@{
    ViewData["Title"] = "Index";
}

<div class="ia_admin_list">
    <div class="ia_admin_list_header">
        <p class="ia_title">Sosyal medya linkleri</p>
        <a class="ia_new_button" href="SocialMedia/CreateSocialMedia/">Yeni Ekle</a>
    </div>
    <div>
        <table class="ia_admin_list_table">
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Düzenleme</th>
                <th>Silme</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Url</td>
                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="ia_button_remove">Sil</a></td>
                    <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="ia_button_success">Güncelle</a></td>
                </tr>
            }
        </table>
    </div>
</div>