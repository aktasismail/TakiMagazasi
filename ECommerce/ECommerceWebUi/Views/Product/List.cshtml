@model List<ProductDto>
@{
    ViewData["Title"] = "Index";
}

<div class="ia_admin_list">
    <div class="ia_admin_list_header">
        <p class="ia_title">Ürünler</p>
        <a class="ia_new_button" asp-controller="Product" asp-action="CreateProduct">Yeni Ekle</a>
    </div>
    <div>
        <table class="ia_admin_list_table">
            <tr>
                <th>Başlık</th>
                <th>Fiyat</th>
                <th>Düzenleme</th>
                <th>Silme</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td><a href="/Product/DeleteProduct/@item.Id" class="ia_button_remove">Sil</a></td>
                    <td><a href="/Product/UpdateProduct/@item.Id" class="ia_button_success">Güncelle</a></td>
                </tr>
            }
        </table>
    </div>
</div>