@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<div class="ia_admin_list">
    <div class="ia_admin_list_header">
        <p class="ia_title">Kategoriler</p>
        <a class="ia_new_button" href="Category/CreateCategory/">Yeni Ekle</a>
    </div>
    <div>
        <table class="ia_admin_list_table">
            <tr>
                <th>Başlık</th>
                <th>Düzenleme</th>
                <th>Silme</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td><a href="/Category/DeleteCategory/@item.CategoryId" class="ia_button_remove">Sil</a></td>
                    <td><a href="/Category/UpdateCategory/@item.CategoryId" class="ia_button_success">Güncelle</a></td>
                </tr>
            }
        </table>
    </div>
</div>