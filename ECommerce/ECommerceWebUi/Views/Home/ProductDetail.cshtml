@model ProductDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ürün Detayı";
    
}
<div class="ia_product_detail">
    <div class="pdetail_img">
        <img src="~/image/@Model.ImageUrl" />
    </div>
    <div class="pdetail">
        <span class="ia_title">@Model.ProductName</span>
        <p class="ia_title_large">@Model.Price ₺</p>
        <div class="ia_cart">
            <a href="#" onclick="addproductid(@Model.Id)" class="ia_button_fullsize">Sepete Ekle</a>
        </div>
        <p>Ürün detayları</p>
        @Html.Raw(Model.Description)
    </div>
</div>
<span class="ia_title_product_detail">Diğer ürünler</span>

