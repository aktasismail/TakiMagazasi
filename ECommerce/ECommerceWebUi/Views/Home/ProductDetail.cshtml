@section Scripts {
    <script>
        function addproductid(value) {
            var id = value;
            $.ajax({
                type: 'POST',
                data: { item: id },
                url: "/Home/AddToCart/" + id,
                contentType: 'json',
                success: function () {
                    swal("Sepete Eklendi.");
                }
            });
        };
    </script>
